
<%= flash[:notice] %>
  <div class = "container">
    <div class = "row">
      <div class = "col-lg-5">
        <h2>マイページ</h2>
        <% if @user.profile_image.attached? %>
          <%= image_tag @user.profile_image, size: "200x150" %>
        <% else %>
          <%= image_tag 'no_image', size: "200x150" %>
        <% end %>
        <table>
          <tr><td>ユーザ名：</td><td><%= @user.nick_name %></td></tr>
          <tr><td>在住：</td><td><%= @user.prefecture.prefecture %></td></tr>
          <tr><td><%= @user.introduction %></td></tr>
          <tr><td><%= link_to "ユーザ情報編集", edit_user_path(@user) %></td></tr>
          <tr><td><%= link_to "行ってみたい！をした投稿一覧", wanna_goes_user_path(current_user) %></td></tr>
        </table>
      </div>
      <div class = "card-body">
        <div class = "row d-flex flex-row py-5">
          <div class = "col-lg-8 card">
            <%= render 'templates/user_show_pictures', users: @user %>
          </div>
        </div>
      </div>
    </div>
  </div>
