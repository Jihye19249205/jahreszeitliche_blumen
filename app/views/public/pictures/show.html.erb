<%= flash[:notice] %>
<div class = "container">
  <div class = "row">
    <div class = "col-md-5">
      <h2>投稿詳細</h2>
      <p><%= image_tag @picture.image, size: "300x250" %></p>
      <p><%= @picture.created_at.strftime('%Y/%m/%d %H:%M') %></p>
      <% if @picture.wanna_gone_by?(current_user) %>
      <p>
        <%= link_to picture_wanna_goes_path(@picture), method: :delete do %>
          <%= @picture.wanna_goes.count %> 行ってみたい！
        <% end %>
      </p>
      <% else %>
      <p>
        <%= link_to picture_wanna_goes_path(@picture), method: :post do %>
          行ってみたい！<%= @picture.wanna_goes.count %> 件
        <% end %>
      </p>
      <p>コメント：<%= @picture.picture_comments.count %>件</p>
      <%= form_with model: @picture_comment, picture_path(@picture.id) do |f| %>
      <p><%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %></p>
      <p><%= f.submit "コメントを送信" %></p>
      <% end %>
    </div>
    <div class = "col-md-5">
      <table class = "table">
        <tr>
          <td>スポット：</td>
          <td><%= @picture.spot_name %></td>
        </tr>
        <tr>
          <td>撮影時期</td>
          <td><%= @picture.season %></td>
        </tr>
        <tr>
          <td>花・植物の種類：</td>
          <td><%= @picture.flower_plant %></td>
        </tr>
        <tr>
          <td>都道府県：</td>
          <td><%= @picture.prefecture %></td>
        </tr>
        <tr>
          <td>最寄駅：</td>
          <td><%= @picture.station %></td>
        </tr>
        <tr>
          <td>キャプション：</td>
          <td><%= @picture.caption %></td>
        </tr>
        <tr>
          <td><%= link_to "投稿を編集", edit_picture_path(@picture) %></td>
          <% if user == current_user %>
          <td><%= link_to "投稿を削除", picture_path, method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
          <% else %>
          <td></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>
