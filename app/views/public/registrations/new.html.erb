<div class = "container">
  <div class = "row">
    <h2>ユーザー登録</h2>

    <table>
    <%= form_with model: @user, url: user_registration_path do |f| %>
      <%= render "publics/shared/error_messages", resource: resource %>

      <tr>
        <th>名前：</th>
        <td><%= f.label "（姓）" %>   <%= f.text_field :last_name %></td>
        <td><%= f.label "（名）" %>   <%= f.text_field :first_name %></td>
      </tr>

      <tr>
        <th>フリガナ：</th>
        <td><%= f.label "（セイ）" %><%= f.text_field :last_name_kana %></td>
        <td><%= f.label "（メイ）" %><%= f.text_field :first_name_kana %></td>
      </tr>

      <tr>
        <td><%= f.label "ニックネーム" %><%= f.text_field :nick_name %></td>
      </tr>

      <tr>
        <th><%= f.label "メールアドレス" %></th>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>

      <tr>
        <th><%= f.label "電話番号(ハイフンなし)" %></th>
        <td><%= f.telephone_field :phone_number %></td>
      </tr>

      <tr>
        <th><%= f.label "パスワード（6文字以上）" %></th>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
      </tr>

      <tr>
        <th><%= f.label "パスワード（確認用）" %></th>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </tr>

      <tr>
        <th></th>
        <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
      </tr>
    <% end %>
    </table>

    <%= render "public/shared/links" %>
  </div>
</div>
