<div class = "container">
  <div class = "row">
    <h2>カテゴリ編集</h2>
    <table class = "table">
      <%= form_with model: @category, url: admin_category_path do |f| %>
      <tr>
        <td><%= @category.name %></td>
        <td><%= f.text_field :name %></td>
        <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>