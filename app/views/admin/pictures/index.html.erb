<div class = "container">
  <div class = "row">
    <%= form_with model: @picture, url: search_pictures_path, local: true, method: :get do |f| %>
    <table>
      <tr>
        <td>
          <%= flash[:notice] %>
          <%= flash[:alert] %>
        </td>
      </tr>
      <tr><th>キーワード検索</th></tr>
      <tr>
        <td><%= f.text_field :word, placeholder: "花・植物で検索", class: "form-box" %></td>
        <td><%= f.submit "検索", class: "btn btn-success" %></td>
      </tr>
      <tr><th>タグ検索</th></tr>
      <tr>
        <td><%= f.collection_select :season_id, Season.where(id:2..5), :id, :season, prompt: "季節を選択してください" %></td>
        <td><%= f.submit "検索", class: "btn btn-success" %></td>
      </tr>
      <tr>
        <td><%= f.collection_select :prefecture_id, Prefecture.where(id:2..8), :id, :prefecture, prompt: "都道府県を選択してください" %></td>
        <td><%= f.submit "検索", class: "btn btn-success" %></td>
      </tr>
    </table>
    <% end %>
    <h2>投稿一覧</h2>
    <table class = "table">
      <% @pictures.each do |picture| %>
      <tr>
        <td>
          <%= link_to admin_picture_path(picture) do %>
            <%= image_tag picture.image, size: "350x250" %>
          <% end %>
        </td>
        <td>撮影者<%= picture.user.nick_name %>さん</td>
        <td>行ってみたい!<%= picture.wanna_goes.count %>件</td>
        <td>コメント：<%= picture.picture_comments.count %>件</td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
