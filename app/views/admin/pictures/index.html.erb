<div class = "container">
  <div class = "row d-flex">
    <%= form_with model: @picture, url: search_admin_pictures_path, local: true, method: :get do |f| %>
  <table>
    <tr>
      <th>キーワード検索</th>
      <td><%= f.text_field :word, placeholder: "花・植物で検索", class: "form-box" %></td>
      <td><%= f.submit "検索", class: "btn btn-success" %></td>
    </tr>
    <tr>
      <th>タグ検索</th>
      <td><%= f.collection_select :season_id, Season.where(id:2..5), :id, :season, prompt: "季節を選択してください" %></td>
      <td><%= f.collection_select :prefecture_id, Prefecture.where(id:2..8), :id, :prefecture, prompt: "都道府県を選択してください" %></td>
      <td><%= f.submit "検索", class: "btn btn-success" %></td>
    </tr>
  </table>
<% end %>
  </div>
  <div class = "row"><%= flash[:notice] %></div>
  <div class = "row">
    <h2>投稿一覧</h2>
  </div>
  <div class = "card-body">
    <div class = "row flex-row">
      <%= render 'templates/pictures', pictures: @pictures %>
    </div>
  </div>
</div>
