<div class = "container">
  <h1>新着投稿（<%= @pictures.count %>件)</h1>
    <div class = "row py-5">
      <p><%= flash[:notice] %></p>
    </div>
    <div class = "card-body">
      <div class = "row flex-row">
        <% @pictures.each do |picture| %>
        <div class = "d-flex align-content-start flex-wrap width: 33%; col-lg-4">
          <div class = "card-body">
            <div class = "d-flex card w-100 mx-auto shadow-lg">
              <p>
                <%= link_to admin_picture_path(picture) do %>
                  <%= image_tag picture.image, size: "350x250", class: "card-img-top"; %>
                <% end %>
              </p>
              <p>
                撮影者：<%= picture.user.nick_name %>さん
              </p>
              <p>
                行ってみたい!：<%= picture.wanna_goes.count %>件
              </p>
              <p>
                コメント：<%= picture.picture_comments.count %>件
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
</div>